<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shop">
	<select id="getProductList" resultType="ProductDTO">
		
		SELECT
			*
		FROM
			COFFEE
	
	
	</select>
	
	<select id="getProductInfo" parameterType="Long" resultType="ProductDTO">
	
		SELECT 
			*
		FROM
			COFFEE
		WHERE
			COFFEE_ID = #{coffeeId}
	</select>
	
	<select id="checkCouponNumber" parameterType="CouponDTO" resultType="CouponDTO">
		
		SELECT
			*
		FROM 
			COUPON
		WHERE
			COUPON_NUMBER = #{couponNumber} AND COUPON_EXISTENCE ='미사용'
	
	
	</select>

</mapper>